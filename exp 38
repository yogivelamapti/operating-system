#include <stdio.h>
#include <stdlib.h>

int main() {
    int n, head, diskSize, direction;
    printf("Enter disk size: ");
    scanf("%d", &diskSize);

    printf("Enter number of requests: ");
    scanf("%d", &n);

    int req[n];
    printf("Enter disk requests:\n");
    for (int i = 0; i < n; i++)
        scanf("%d", &req[i]);

    printf("Enter head position: ");
    scanf("%d", &head);

    printf("Enter direction (1 = up, 0 = down): ");
    scanf("%d", &direction);

    int total = 0;

    // Add head & boundaries
    req[n] = head;
    req[n+1] = (direction == 1) ? diskSize : 0;
    int m = n + 2;

    // Sort requests
    for (int i = 0; i < m; i++)
        for (int j = 0; j < m - i - 1; j++)
            if (req[j] > req[j+1]) {
                int temp = req[j];
                req[j] = req[j+1];
                req[j+1] = temp;
            }

    // Find head index
    int pos = 0;
    for (int i = 0; i < m; i++)
        if (req[i] == head)
            pos = i;

    if (direction == 1) {
        for (int i = pos; i < m - 1; i++)
            total += abs(req[i+1] - req[i]);

        for (int i = pos - 1; i > 0; i--)
            total += abs(req[i] - req[i-1]);
    } else {
        for (int i = pos; i > 0; i--)
            total += abs(req[i] - req[i-1]);

        for (int i = pos + 1; i < m - 1; i++)
            total += abs(req[i+1] - req[i]);
    }

    printf("\nTotal Head Movement = %d cylinders\n", total);
    return 0;
}
