#include <stdio.h>

struct Block {
    int blockNumber;
    int nextBlock;
};

int main() {
    int n;
    struct Block file[50];

    printf("Enter number of blocks in the file: ");
    scanf("%d", &n);

    printf("Enter block number and next block (-1 for end):\n");
    for (int i = 0; i < n; i++)
        scanf("%d %d", &file[i].blockNumber, &file[i].nextBlock);

    printf("\nLinked File Allocation:\n");
    printf("Start → ");

    int start = file[0].blockNumber;
    int next = file[0].nextBlock;

    printf("%d → ", start);

