#include <stdio.h>
#include <stdlib.h>

int main() {
    int n, head, diskSize;
    printf("Enter disk size: ");
    scanf("%d", &diskSize);

    printf("Enter number of requests: ");
    scanf("%d", &n);

    int req[n];
    printf("Enter disk requests:\n");
    for (int i = 0; i < n; i++)
        scanf("%d", &req[i]);

    printf("Enter head position: ");
    scanf("%d", &head);

    // Add head + boundaries 0 and max
    req[n] = head;
    req[n+1] = 0;
    req[n+2] = diskSize;
    int m = n + 3;

    // Sort
    for (int i = 0; i < m; i++)
        for (int j = 0; j < m - i - 1; j++)
            if (req[j] > req[j+1]) {
                int temp = req[j];
                req[j] = req[j+1];
                req[j+1] = temp;
            }

    int pos;
    for (int i = 0; i < m; i++)
        if (req[i] == head)
            pos = i;

    int total = 0;

    for (int i = pos; i < m - 1; i++)
        total += abs(req[i+1] - req[i]);

    total += abs(req[m-1] - req[0]);

    for (int i = 0; i < pos; i++)
        total += abs(req[i+1] - req[i]);

    printf("\nTotal Head Movement = %d cylinders\n", total);
    return 0;
}
