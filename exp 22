#include <stdio.h>
#include <fcntl.h>
#include <unistd.h>
#include <sys/stat.h>
#include <dirent.h>

int main() {
    int fd;
    struct stat st;
    DIR *d;
    struct dirent *de;

    fd = open("demo.txt", O_CREAT | O_RDWR, 0644);
    write(fd, "OS System Calls", 15);

     int flags = fcntl(fd, F_GETFL);
    printf("File Flags: %d\n", flags);

     lseek(fd, 0, SEEK_SET);

     stat("demo.txt", &st);
    printf("File Size: %ld bytes\n", st.st_size);

     d = opendir(".");
    printf("\nFiles in directory:\n");
    while ((de = readdir(d)) != NULL)
        printf("%s\n", de->d_name);

    closedir(d);
    close(fd);
    return 0;
}
OUTPUT:
File Flags: 32770
File Size: 15 bytes

Files in directory:
.
..
a.out
demo.txt
program.c
