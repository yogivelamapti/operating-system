#include <stdio.h>
#include <dirent.h>

int main() {
    DIR *dir;
    struct dirent *entry;

    printf("Listing files in current directory:\n");
    dir = opendir(".");
    if(dir == NULL) {
        printf("Could not open directory.\n");
        return 1;
    }

    while((entry = readdir(dir)) != NULL) {
        printf("%s\n", entry->d_name);
    }

    closedir(dir);
    return 0;
}
OUTPUT:
Listing files in current directory:
.
..
demo.txt
program.c
notes.doc
