#include <stdio.h>
#include <sys/ipc.h>
#include <sys/shm.h>
#include <string.h>

int main() {
    key_t key = ftok("shmfile", 65);
    int shmid = shmget(key, 1024, 0666 | IPC_CREAT);
    char *str = (char*) shmat(shmid, NULL, 0);

    printf("Write data: ");
    fgets(str, 100, stdin);

    printf("Data written in memory: %s\n", str);

    shmdt(str);
    return 0;
}

OUTPUT 
Write data: JOHN
Data written in memory: JOHN

#include <stdio.h>
#include <sys/ipc.h>
#include <sys/shm.h>

int main() {
    key_t key = ftok("shmfile", 65);
    int shmid = shmget(key, 1024, 0666);
    char *str = (char*) shmat(shmid, NULL, 0);

    printf("Data read from memory: %s\n", str);

    shmdt(str);
    shmctl(shmid, IPC_RMID, NULL); // delete shared memory
    return 0;
}
 OUTPUT
Data read from memory: JOHN
